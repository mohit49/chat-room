# Production Environment Configuration for flipychat.com
NODE_ENV=production
PORT=3001

# Domain Configuration
DOMAIN=flipychat.com
USE_HTTPS=true

# Production URLs
FRONTEND_URL=https://flipychat.com
BACKEND_URL=https://flipychat.com
CORS_ORIGIN=https://flipychat.com

# Database Configuration
DATABASE_URL=mongodb://localhost:27017/chat-app-prod

# JWT Secret (use a secure secret in production)
JWT_SECRET=your-super-secure-production-secret-key-change-this

# Additional CORS Origins
ADDITIONAL_CORS_ORIGINS=https://flipychat.com,http://flipychat.com,https://www.flipychat.com,http://www.flipychat.com

# Next.js Public API URL
NEXT_PUBLIC_API_URL=https://flipychat.com/api

# SSL Configuration (if using custom SSL certificates)
# SSL_CERT_PATH=/path/to/ssl/cert.pem
# SSL_KEY_PATH=/path/to/ssl/private.key
