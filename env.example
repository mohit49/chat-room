# Environment Configuration Template
# Copy this file to .env.local for local development
# Copy this file to .env.production for VPS deployment

# Environment (development | production)
NODE_ENV=development

# Server Port
PORT=3001

# Frontend URL (where Next.js app runs)
FRONTEND_URL=http://localhost:3000

# Backend URL (where Express server runs)
BACKEND_URL=http://localhost:3001

# CORS Origin (allowed origins for API)
CORS_ORIGIN=http://localhost:3000

# Database Configuration
DATABASE_URL=mongodb://localhost:27017/chat-app-local

# JWT Secret Key (use a secure secret in production)
JWT_SECRET=local-development-secret-key

# Additional CORS Origins (comma-separated)
ADDITIONAL_CORS_ORIGINS=http://localhost:3000,http://localhost:3002,http://127.0.0.1:3000

# Next.js Public API URL (for frontend to connect to backend)
NEXT_PUBLIC_API_URL=http://localhost:3001/api

# VAPID Keys for Push Notifications
# Generate new keys with: npx web-push generate-vapid-keys
# DO NOT SHARE PRIVATE KEY IN PRODUCTION!
NEXT_PUBLIC_VAPID_PUBLIC_KEY=your_public_vapid_key_here
VAPID_PRIVATE_KEY=your_private_vapid_key_here
VAPID_EMAIL=mailto:your-email@domain.com

# Google Maps API Key (for location services)
# Get your API key from: https://console.cloud.google.com/
# Enable Geocoding API for this key
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Email Service Configuration (for email verification)
# For Gmail: Use app-specific password from https://myaccount.google.com/apppasswords
# For other providers: Use your SMTP credentials
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
EMAIL_FROM="FlipyChat" <noreply@flipychat.com>

# Domain Configuration (for VPS deployment)
# Uncomment and modify these for production:
# DOMAIN=yourdomain.com
# USE_HTTPS=true
# SSL_CERT_PATH=/path/to/ssl/cert.pem
# SSL_KEY_PATH=/path/to/ssl/private.key
