# Environment Configuration Template
# Copy this file to .env.local for local development
# Copy this file to .env.production for VPS deployment

# Environment (development | production)
NODE_ENV=development

# Server Port
PORT=3001

# Frontend URL (where Next.js app runs)
FRONTEND_URL=http://localhost:3000

# Backend URL (where Express server runs)
BACKEND_URL=http://localhost:3001

# CORS Origin (allowed origins for API)
CORS_ORIGIN=http://localhost:3000

# Database Configuration
DATABASE_URL=mongodb://localhost:27017/chat-app-local

# JWT Secret Key (use a secure secret in production)
JWT_SECRET=local-development-secret-key

# Additional CORS Origins (comma-separated)
ADDITIONAL_CORS_ORIGINS=http://localhost:3000,http://localhost:3002,http://127.0.0.1:3000

# Next.js Public API URL (for frontend to connect to backend)
NEXT_PUBLIC_API_URL=http://localhost:3001/api

