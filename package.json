{
  "name": "chat-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"next dev -H 0.0.0.0\" \"npm run server\"",
    "dev:local": "concurrently \"cross-env NODE_ENV=development npm run dev:frontend\" \"npm run server:local\"",
    "dev:localhost": "concurrently \"next dev\" \"npm run server\"",
    "demo": "concurrently \"next dev -H 0.0.0.0\" \"npm run server\" && npm run network-ip",
    "dev:frontend": "next dev",
    "server": "tsx watch server/index.ts",
    "server:local": "cross-env NODE_ENV=development tsx watch server/index.ts",
    "server:prod": "cross-env NODE_ENV=production tsx server/index.ts",
    "build": "next build",
    "build:prod": "cross-env NODE_ENV=production DOMAIN=flipychat.com USE_HTTPS=true NEXT_PUBLIC_API_URL=https://flipychat.com/api next build",
    "start": "next start -H 0.0.0.0",
    "start:localhost": "next start",
    "start:local": "concurrently \"cross-env NODE_ENV=development npm run start:frontend\" \"npm run server:local\"",
    "start:frontend": "next start",
    "start:prod": "concurrently \"npm run server:prod\" \"npm run start\"",
    "start:domain": "cross-env NODE_ENV=production DOMAIN=flipychat.com USE_HTTPS=true NEXT_PUBLIC_API_URL=https://flipychat.com/api npm run start:prod",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "network-ip": "node scripts/get-network-ip.js",
    "setup:local": "node scripts/setup-env.js local",
    "setup:prod": "node scripts/setup-env.js prod",
    "setup:domain": "node scripts/setup-env.js prod flipychat.com",
    "prepare": "husky"
  },
  "dependencies": {
    "@dicebear/collection": "^9.2.4",
    "@dicebear/core": "^9.2.4",
    "@hookform/resolvers": "^3.9.1",
    "@mediapipe/face_detection": "^0.4.1646425229",
    "@mediapipe/face_mesh": "^0.4.1633559619",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toast": "^1.2.15",
    "@tensorflow-models/face-landmarks-detection": "^1.0.6",
    "@tensorflow-models/facemesh": "^0.0.4",
    "@tensorflow/tfjs": "^4.22.0",
    "@tensorflow/tfjs-backend-cpu": "^4.22.0",
    "@tensorflow/tfjs-backend-webgl": "^4.22.0",
    "@tensorflow/tfjs-converter": "^4.22.0",
    "@tensorflow/tfjs-core": "^4.22.0",
    "@types/multer": "^2.0.0",
    "bcryptjs": "^2.4.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.7",
    "embla-carousel-autoplay": "^8.6.0",
