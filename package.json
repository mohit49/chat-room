    "lucide-react": "^0.469.0",
    "mongoose": "^8.19.0",
    "multer": "^2.0.2",
    "nanoid": "^5.1.6",
    "next": "^15.5.4",
    "react": "^19.0.0",
    "react-day-picker": "^9.11.0",
    "react-dom": "^19.0.0",
    "react-easy-crop": "^5.5.3",
    "react-hook-form": "^7.54.2",
    "sharp": "^0.34.4",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
