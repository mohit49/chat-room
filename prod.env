# Production Environment Configuration
NODE_ENV=production
PORT=3001

# Production URLs (replace with your actual domain)
FRONTEND_URL=https://yourdomain.com
BACKEND_URL=https://yourdomain.com:3001
CORS_ORIGIN=https://yourdomain.com

# Database Configuration
DATABASE_URL=mongodb://localhost:27017/chat-app-prod

# JWT Configuration (use a secure secret in production)
JWT_SECRET=your-super-secure-production-secret-key-here

# Additional CORS Origins for production
ADDITIONAL_CORS_ORIGINS=https://yourdomain.com,http://yourdomain.com,https://www.yourdomain.com
